<%= if action_name(@conn) == @action do %>
  <%= link @text, to: Routes.page_path(@conn, @action), class: "mt-1 block px-3 py-2 rounded-md text-base font-medium text-white bg-gray-900 focus:outline-none focus:text-white focus:bg-gray-700" %>
<% else %>
  <%= link @text, to: Routes.page_path(@conn, @action), class: "mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700" %>
<% end %>